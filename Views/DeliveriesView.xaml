<Page
    x:Class="UBB_SE_2025_EUROTRUCKERS.Views.DeliveriesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:UBB_SE_2025_EUROTRUCKERS.ViewModels"
    xmlns:models="using:UBB_SE_2025_EUROTRUCKERS.Models"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:DeliveriesViewModel, IsDesignTimeCreatable=True}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="20,10">
            <TextBlock Text="Deliveries Management" 
                      FontSize="24" 
                      FontWeight="SemiBold"/>

            <Button Content="Refresh" 
                    Command="{Binding LoadDeliveriesCommand}"
                    Margin="20,0,0,0"
                    Padding="15,5"/>
        </StackPanel>

        <!-- Deliveries list -->
        <controls:ItemsRepeater Grid.Row="1" 
                               ItemsSource="{Binding Deliveries}"
                               Margin="20">
            <controls:ItemsRepeater.Layout>
                <controls:UniformGridLayout ItemsStretch="Fill"
                                          MinItemWidth="300"
                                          MaximumRowsOrColumns="3"/>
            </controls:ItemsRepeater.Layout>

            <controls:ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="models:Delivery">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefault}"
                            BorderBrush="{ThemeResource CardStrokeColorDefault}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="15"
                            Margin="10"
                            PointerPressed="DeliveryCard_PointerPressed">
                        <StackPanel>
                            <TextBlock Text="{Binding ReferenceNumber}"
                                      FontSize="18"
                                      FontWeight="SemiBold"/>

                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="{Binding DepartureAddress}" 
                                           Style="{ThemeResource BodyTextBlockStyle}"/>
                                <SymbolIcon Symbol="Forward" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DestinationAddress}" 
                                           Style="{ThemeResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Driver.FirstName}"
                                      Margin="0,10,0,0"
                                      Style="{ThemeResource CaptionTextBlockStyle}"/>

                            <TextBlock Text="{Binding Driver.LastName}"
                                      Margin="0,10,0,0"
                                      Style="{ThemeResource CaptionTextBlockStyle}"/>   

                            <TextBlock Text="{Binding Status}"
                                      Margin="0,5,0,0"
                                      Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </controls:ItemsRepeater.ItemTemplate>
        </controls:ItemsRepeater>

        <!-- Progress Ring when loading -->
        <controls:ProgressRing Grid.Row="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="50"
                              Height="50"
                              IsActive="{Binding IsBusy}"
                              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Page>